        Closing="Window_Closing" >
    <Grid Margin="0,0,2,-21">

        <Label x:Name="Label_Nome" Content="Nome" HorizontalAlignment="Left" Margin="49,68,0,0" VerticalAlignment="Top" Width="148" Height="30"/>
        <Label x:Name="LabelTelefone" Content="Telefone" HorizontalAlignment="Left" Margin="49,116,0,0" VerticalAlignment="Top" Width="148" Height="30"/>
        <Label x:Name="Label_Email" Content="email" HorizontalAlignment="Left" Margin="49,163,0,0" VerticalAlignment="Top" Width="148" Height="30"/>
