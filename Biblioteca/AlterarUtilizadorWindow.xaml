        <TextBox x:Name="TextBox_IdUtilizador" IsReadOnly="True" HorizontalAlignment="Left" Height="26" Margin="225,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328"/>
        <Label x:Name="Label_Estado" Content="Estado" HorizontalAlignment="Left" Margin="49,402,0,0" VerticalAlignment="Top" Width="148"/>
        <TextBox x:Name="TextBox_Estado" IsReadOnly="True" HorizontalAlignment="Left" Height="35" Margin="225,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328"/>

    </Grid>
</Window>
